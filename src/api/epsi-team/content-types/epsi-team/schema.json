{
  "kind": "collectionType",
  "collectionName": "epsi_teams",
  "info": {
    "singularName": "epsi-team",
    "pluralName": "epsi-teams",
    "displayName": "[EPSI] Team"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "picture": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "email": {
      "type": "email"
    },
    "phone": {
      "type": "string",
      "regex": "^[0-9()+ ]*$"
    }
  }
}
